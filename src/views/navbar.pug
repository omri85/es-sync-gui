block navbar
    script.
        $(document).ready(function () {
            var current = location.href.split("/")[3];
            $(".active").removeClass("active");
            $(`#${current}`).addClass("active");
        });
    #navbar.d-flex.flex-column.flex-shrink-o.p-3.bg-light
        ul(class="nav nav-pills flex-column mb-auto")
            li(class="nav-item")
                a(href="/connections" class="nav-link" id="connections") Connectors
                a(href="/syncs" class="nav-link" id="syncs") Syncs
                a(href="/imports" class="nav-link" id="imports") Imports